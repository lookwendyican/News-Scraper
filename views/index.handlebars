<nav class="navbar navbar-default navbar-fixed-top" id="navbar">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="/">Bored Panda News Scrapper</a>
        </div>
        <ul class="nav navbar-nav">
            <li class="active"><a href="/">Home</a></li>
            <li><a href="/saved">Saved Articles</a></li>

        </ul>
        <a class="btn btn-primary navbar-btn" id="scrapeBtn" href="/api/articles/scrape">Scrape New Articles!</a>
    </div>
</nav>


<div class="jumbotron">
    <div class="row">
        <div class="col-md-12">
            <img src="assets/img/boredpandalogo.png" <h1>{{this.title}}</h1>
            <h3>{{this.subtitle}}</h3>
        </div>
    </div>
</div>

<div id="articles">
    {{#each articles}}
    <div class="well">
        <div class="row">
            <div class="col col-md-8">
                <h4><a href="{{this.link}}">{{this.title}}</a></h4>
            </div>
            <div class="col col-md-2">
                <form class="form-inline" action="/api/articles/save/{{this.id}}" method="POST">
                    <button type="submit" class="btn btn-success">Save Article</button>
                </form>
            </div>
            <div class="col col-md-2">
                <form class="form-inline" action="/api/articles/dismiss/{{this.id}}?_method=DELETE" method="POST">
                    <button type="submit" class="btn btn-warning">Remove Article</button>
                </form>
            </div>
        </div>
    </div>
    {{/each}}
</div>